<Window x:Class="VM_management_system_by_Korol_Ilya_162.DateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM_management_system_by_Korol_Ilya_162"
        mc:Ignorable="d"
        Title="Please, enter month and year. " Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18">Month:</Label>
        <Label Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18">Year:</Label>
        <TextBox x:Name="textboxMonth" Margin="5" Grid.Row="0" Grid.Column="1" FontSize="30"></TextBox>
        <TextBox x:Name="textboxYear" Margin="5" Grid.Row="1" Grid.Column="1" FontSize="30"></TextBox>
        <Button Grid.ColumnSpan="2" Grid.Row="2" FontSize="24" Margin="5" Click="Button_Click">Confirm choice</Button>
    </Grid>
</Window>
